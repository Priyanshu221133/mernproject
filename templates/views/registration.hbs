<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <title>Register</title>
</head>

<body>
    {{>navbar}}

    {{!-- registeration gorm --}}
    <section class="forms">
        <div class="container mt-5 mb-5 ">
               
            <form action="/registration" method="POST">

                 <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-5 register-left ">

                    <label for="staticEmail" class="col-sm-2 col-form-label">FirstName:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="text" class="form-control" id="staticEmail" placeholder="First Name*" value="" name="firstname">
                    </div>

                    <label for="staticEmail" class="col-sm-2 col-form-label">Email:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="Email" class="form-control" id="staticEmail" placeholder="Your Email*" value="" name="email">
                    </div>

                    <label for="staticEmail" class="col-sm-2 col-form-label">Phone:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="text" minlength="10" maxlength="10" class="form-control" id="staticEmail" placeholder="Your Phone*" value="" name="phone">
                    </div>

                    <label for="staticEmail" class="col-sm-2 col-form-label">Password:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="password" class="form-control" id="staticEmail" placeholder="Your Password*"
                            value="" name="password">
                    </div>

                </div>

                <div class="col-12 col-md-5 register-right">
                    <label for="staticEmail" class="col-sm-2 col-form-label">LastName:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="text" class="form-control" id="staticEmail" placeholder="Last Name*" value="" name="lastname">
                    </div>

                    <div class="mt-4">
                        <input type="radio" id="male" name="gender" value="male" >
                        <label for="html">Male</label><br>
                        <input type="radio" id="css" name="gender" value="femail" >
                        <label for="css">Female</label><br>
                    </div>

                    <label for="staticEmail" class="col-sm-2 col-form-label mt-2">Age:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="text" class="form-control" id="staticEmail" placeholder="Enter Your Age*" value="" name="age">
                    </div>
    
                    <label for="staticEmail" class="col-sm-2 col-form-label">ConfirmPassword:</label>
                    <div class="col-sm-10 border border-4">
                        <input type="password" class="form-control" id="staticEmail" placeholder="ConfirmPassword*" value="" name="confirmpassword">
                    </div> 

                    <div class="mt-4">
                        <input type="submit" class="btnRegister" value="registration">
                    </div>
                </div>
                
               </div>
            </form>
            
        </div>
    </section>


</body>

</html>